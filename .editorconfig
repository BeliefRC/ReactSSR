[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = false
indent_style = space
indent_size = 4

[{.babelrc, .lessrc, .prettierrc, .stylelintrc, .eslintrc, jest.config, .jsinspectrc, *.json, *.jsb3, *.jsb2, *.bowerrc}]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[{*.es6, *.mjs}]
indent_style = space
indent_size = 2

[{jshint.json, *.jshintrc}]
indent_style = space
indent_size = 2

[{*.jscs.json, *.jscsrc}]
indent_style = space
indent_size = 2

[*.js.map]
indent_style = space
indent_size = 2

[{.analysis_options, *.yml, *.yaml}]
indent_style = space
indent_size = 2

